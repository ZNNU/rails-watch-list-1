<div class="container">
  <h1> <%= @list.name %> </h1>
</div>

<% @list.bookmarks.each do |bookmark| %>
<div class="container">
  <ul class="row">
    <%= bookmark.movie.title %>
    <%= bookmark.comment %>
    <%= link_to 'delete', bookmark_path, method: 'delete' %>
  </div>
  <% end %>
</ul>

<div class="container">
<h2>New Bookmark</h2>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, input_html: { class: 'select2' } %>
    <%= f.submit %>
  <% end %>
  <br>
  <br>

  <h2>New Review</h2>
  <%= simple_form_for [@list, @review] do |f| %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.input :comment %>
    <%= f.submit %>
  <% end %>
</div>

<%= link_to "back", lists_path %>
